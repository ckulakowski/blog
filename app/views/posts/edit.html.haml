%h1 edit post

= form_for @post do |f|
  = f.text_field :title, place_holder: 'title'
  = f.text_area :body, place_holder: 'body'
  = f.submit 'Update', class: 'btn btn-primary'
  
%h2 edit comment
= form_for @post do |t|
  = t.text_field :comment, place_holder: 'title'
  = t.submit 'Update', class: 'btn btn-primary'