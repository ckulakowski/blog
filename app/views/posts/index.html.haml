%h1 Pedals and Pitons

.left-column
  .inner
    = image_tag 'http://upload.wikimedia.org/wikipedia/commons/thumb/0/07/Gunks_Traps_-_Pitons_on_Shockley%27s_Ceiling_-_2.jpg/90px-Gunks_Traps_-_Pitons_on_Shockley%27s_Ceiling_-_2.jpg', class: 'pull-left'
    
.right-column
  .inner
    - @posts.each do |post|
      .post.pull-left
        %h3= link_to post.title, post_path(post)
        %p= post.body
    
%hr.clearfix

= link_to "#{fa_icon('plus')} New Post".html_safe, new_post_path, class: 'btn btn-primary'

  
  