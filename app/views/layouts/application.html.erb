<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if flash[:error] %>
    <div class="error">
      <%= flash[:error] %>
    </div>
  <% elsif flash[:info] %>
    <div class="success">
      <%= flash[:info] %>
    </div>
  <% end %>
<%= yield %>

</body>
</html>
